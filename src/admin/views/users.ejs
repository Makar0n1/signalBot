            </nav>
        </header>

        <div class="controls">
            <div class="search-box">
                <input type="text" id="searchInput" placeholder="–ü–æ–∏—Å–∫ –ø–æ User ID –∏–ª–∏ username...">
                <button onclick="searchUsers()">üîç –ü–æ–∏—Å–∫</button>
                <button onclick="loadUsers()">üîÑ –û–±–Ω–æ–≤–∏—Ç—å</button>
            </div>
        </div>

        <div id="loading" class="loading">–ó–∞–≥—Ä—É–∑–∫–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π...</div>

        <table id="usersTable" style="display: none;">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>–°—Ç–∞—Ç—É—Å</th>
                    <th>–¢—Ä–∏–∞–ª</th>
                    <th>–ü–æ–¥–ø–∏—Å–∫–∞</th>
                    <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                </tr>
            </thead>
            <tbody id="usersBody">
            </tbody>
        </table>

        <div class="pagination" id="pagination"></div>
    </div>

    <script>
        let currentPage = 1;
        let searchQuery = '';

        async function loadUsers(page = 1) {
            currentPage = page;
            try {
                document.getElementById('loading').style.display = 'block';
                document.getElementById('usersTable').style.display = 'none';

                const url = `/api/users?page=${page}&limit=20${searchQuery ? `&search=${searchQuery}` : ''}`;
                const response = await fetch(url);
                const data = await response.json();

                const tbody = document.getElementById('usersBody');
                tbody.innerHTML = '';

                data.users.forEach(user => {
                    const row = document.createElement('tr');

                    let statusBadge = '<span class="badge expired">–ù–µ—Ç –¥–æ—Å—Ç—É–ø–∞</span>';
                    if (user.is_banned) {
                        statusBadge = '<span class="badge banned">–ó–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞–Ω</span>';
                    } else if (user.has_access) {
                        if (user.subscription_active) {
                            statusBadge = '<span class="badge active">–ü–æ–¥–ø–∏—Å–∫–∞ –∞–∫—Ç–∏–≤–Ω–∞</span>';
                        } else {
                            statusBadge = '<span class="badge trial">–ù–∞ —Ç—Ä–∏–∞–ª–µ</span>';
                        }
                    }

                    row.innerHTML = `
                        <td>${user.user_id}</td>
                        <td>${user.username}</td>
                        <td>${statusBadge}</td>
                        <td>${user.trial_expires ? new Date(user.trial_expires).toLocaleString('ru-RU') : '-'}</td>
                        <td>${user.subscription_expires ? new Date(user.subscription_expires).toLocaleString('ru-RU') : '-'}</td>
                        <td class="actions">
                            <button class="${user.is_banned ? 'success' : 'danger'}" onclick="toggleBan(${user.user_id}, ${!user.is_banned})">
                                ${user.is_banned ? '‚úÖ –†–∞–∑–±–∞–Ω–∏—Ç—å' : 'üö´ –ó–∞–±–∞–Ω–∏—Ç—å'}
                            </button>
                            <button class="success" onclick="extendSubscription(${user.user_id})">
                                ‚ûï –ü—Ä–æ–¥–ª–∏—Ç—å
                            </button>
                        </td>
                    `;
                    tbody.appendChild(row);
                });

                renderPagination(data.pagination);

                document.getElementById('loading').style.display = 'none';
                document.getElementById('usersTable').style.display = 'table';
            } catch (error) {
                console.error('Error loading users:', error);
                document.getElementById('loading').textContent = '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π';
            }
        }

        function renderPagination(pagination) {
            const paginationDiv = document.getElementById('pagination');
            paginationDiv.innerHTML = '';

            if (pagination.totalPages <= 1) return;

            if (pagination.page > 1) {
                const prevBtn = document.createElement('button');
                prevBtn.textContent = '‚Üê –ù–∞–∑–∞–¥';
                prevBtn.onclick = () => loadUsers(pagination.page - 1);
                paginationDiv.appendChild(prevBtn);
            }

            const pageInfo = document.createElement('span');
            pageInfo.textContent = `–°—Ç—Ä–∞–Ω–∏—Ü–∞ ${pagination.page} –∏–∑ ${pagination.totalPages}`;
            pageInfo.style.padding = '10px 20px';
            paginationDiv.appendChild(pageInfo);

            if (pagination.page < pagination.totalPages) {
                const nextBtn = document.createElement('button');
                nextBtn.textContent = '–í–ø–µ—Ä–µ–¥ ‚Üí';
                nextBtn.onclick = () => loadUsers(pagination.page + 1);
                paginationDiv.appendChild(nextBtn);
            }
        }

        async function toggleBan(userId, ban) {
            if (!confirm(`–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ ${ban ? '–∑–∞–±–∞–Ω–∏—Ç—å' : '—Ä–∞–∑–±–∞–Ω–∏—Ç—å'} –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è?`)) {
                return;
            }

            try {
                const response = await fetch(`/api/users/${userId}/ban`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ is_banned: ban })
                });

                if (response.ok) {
                    alert(`–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å ${ban ? '–∑–∞–±–∞–Ω–µ–Ω' : '—Ä–∞–∑–±–∞–Ω–µ–Ω'} —É—Å–ø–µ—à–Ω–æ!`);
                    loadUsers(currentPage);
                } else {
                    alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏');
                }
            } catch (error) {
                alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏');
            }
        }

        async function extendSubscription(userId) {
            const days = prompt('–ù–∞ —Å–∫–æ–ª—å–∫–æ –¥–Ω–µ–π –ø—Ä–æ–¥–ª–∏—Ç—å –ø–æ–¥–ø–∏—Å–∫—É?', '30');
            if (!days || isNaN(days)) return;

            try {
                const response = await fetch(`/api/users/${userId}/subscription`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ days: parseInt(days) })
                });

                if (response.ok) {
                    alert(`–ü–æ–¥–ø–∏—Å–∫–∞ –ø—Ä–æ–¥–ª–µ–Ω–∞ –Ω–∞ ${days} –¥–Ω–µ–π!`);
                    loadUsers(currentPage);
                } else {
                    alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø—Ä–æ–¥–ª–µ–Ω–∏–∏ –ø–æ–¥–ø–∏—Å–∫–∏');
                }
            } catch (error) {
                alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø—Ä–æ–¥–ª–µ–Ω–∏–∏ –ø–æ–¥–ø–∏—Å–∫–∏');
            }
        }

        function searchUsers() {
            searchQuery = document.getElementById('searchInput').value;
            loadUsers(1);
        }

        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                searchUsers();
            }
        });

        loadUsers();
    </script>
